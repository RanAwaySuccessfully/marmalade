    "version": "0.2.0",
    "configurations": [
        {
            "name": "Go: Debug CMD",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/app/cmd",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Go: Debug MediaPipe",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/app/mediapipe",
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}/app/mediapipe/cc:${env:LD_LIBRARY_PATH}"
            }
        },
        {
            "name": "Go: Debug GTK 4",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "marmalade-gtk4",
            "preLaunchTask": "goWithGtk4"
        },
        {
            "name": "Go: Debug GTK 3",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "marmalade-gtk3",
            "preLaunchTask": "goWithGtk3"
        }
    ]
}